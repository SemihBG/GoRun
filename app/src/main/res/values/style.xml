<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/SlideActivityAnimation</item>
    </style>

    <!--Slide Animation Style-->

    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!--Code Editor Highlight Styles-->

    <style name="PackageStyle">
        <item name="android:textColor">@color/Package</item>
    </style>

    <style name="FuncStyle">
        <item name="android:textColor">@color/Func</item>
    </style>

    <style name="ImportStyle">
        <item name="android:textColor">@color/Import</item>
    </style>

    <style name="ReturnStyle">
        <item name="android:textColor">@color/Return</item>
    </style>

    <style name="StringStyle">
        <item name="android:textColor">@color/String</item>
    </style>

    <style name="FunctionStyle">
        <item name="android:textColor">@color/Function</item>
    </style>

</resources>
