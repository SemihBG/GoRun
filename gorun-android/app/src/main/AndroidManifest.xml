<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.semihbkgr.gorun">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name="com.semihbkgr.gorun.activity.SnippetActivity">
        </activity>
        <activity
                android:name="com.semihbkgr.gorun.activity.EditorActivity"
                android:windowSoftInputMode="stateHidden|adjustPan">
        </activity>
        <activity
                android:name="com.semihbkgr.gorun.activity.SettingActivity"
                android:parentActivityName="com.semihbkgr.gorun.activity.MenuActivity">
        </activity>
        <activity
                android:name="com.semihbkgr.gorun.activity.RunActivity"
                android:parentActivityName="com.semihbkgr.gorun.activity.MenuActivity">
        </activity>
        <activity android:name="com.semihbkgr.gorun.activity.MenuActivity">
        </activity>
        <activity android:name="com.semihbkgr.gorun.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>